[Unit]
Description=Gunicorn instance to serve Flask application
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/AirBnB_clone_v4/web_dynamic
Environment="PATH=/home/ubuntu/AirBnB_clone_v4/web_dynamic/venv/bin"
ExecStart=/home/ubuntu/AirBnB_clone_v4/web_dynamic/venv/bin/gunicorn -w 3 -b :5003 2-hbnb:app
StandardOutput=file:/tmp/airbnb-access.log
StandardError=file:/tmp/airbnb-error.log

[Install]
WantedBy=multi-user.target
